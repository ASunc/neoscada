<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.neoscada</groupId>
		<artifactId>org.eclipse.neoscada.deploy.common</artifactId>
		<version>0.5.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>

	<artifactId>org.eclipse.neoscada.deploy.common-ubuntu</artifactId>
	<packaging>pom</packaging>

	<properties>
	</properties>

	<build>
		<plugins>
			<plugin>
				<artifactId>jdeb</artifactId>
				<groupId>org.vafer</groupId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jdeb</goal>
						</goals>
						<configuration>
							<name>neoscada.common</name>
							<deb>${project.build.directory}/neoscada.common_${release.fullVersion}~${buildTimestamp}_all.deb</deb>
							<skipPOMs>false</skipPOMs>
							<snapshotExpand>true</snapshotExpand>
							<dataSet>
								<data>
									<type>template</type>
									<paths>
										<path>/etc/eclipsescada</path>
										<path>/etc/eclipsescada/schema</path>
										<path>/etc/eclipsescada/jarcfg</path>
										<path>/usr/jar</path>
										<path>/usr/share/eclipsescada</path>
										<path>/usr/share/eclipsescada/profiles</path>
										<path>/usr/share/eclipsescada/p2</path>
										<path>/usr/share/eclipsescada/sql</path>
										<path>/var/log/eclipsescada</path>
										<path>/usr/share/perl5/EclipseSCADA</path>
										<path>/var/run/eclipsescada</path>
									</paths>
								</data>
								<data>
									<src>../src/bin</src>
									<type>directory</type>
									<mapper>
										<type>perm</type>
										<prefix>/usr/bin</prefix>
										<filemode>0755</filemode>
									</mapper>
								</data>
								<data>
									<src>../src/share</src>
									<type>directory</type>
									<mapper>
										<type>perm</type>
										<prefix>/usr/share/eclipsescada</prefix>
										<filemode>0644</filemode>
									</mapper>
								</data>
								<data>
									<src>../src/perl</src>
									<type>directory</type>
									<mapper>
										<type>perm</type>
										<prefix>/usr/share/perl5</prefix>
										<filemode>0644</filemode>
									</mapper>
								</data>
								<data>
									<src>../src/default/eclipsescada.sh</src>
									<type>file</type>
									<conffile>true</conffile>
									<mapper>
										<type>perm</type>
										<prefix>/etc/profile.d</prefix>
										<filemode>0744</filemode>
									</mapper>
								</data>
								<data>
									<src>../src/default/eclipsescada</src>
									<type>file</type>
									<conffile>true</conffile>
									<mapper>
										<type>perm</type>
										<prefix>/etc/default</prefix>
										<filemode>0644</filemode>
									</mapper>
								</data>
							</dataSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>