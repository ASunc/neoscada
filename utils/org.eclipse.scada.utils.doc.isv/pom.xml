<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>org.eclipse.neoscada.utils-parent</artifactId>
		<groupId>org.eclipse.neoscada</groupId>
		<version>0.5.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>

	<name>/utils/org.eclipse.scada.utils.doc.isv</name>
	<artifactId>org.eclipse.scada.utils.doc.isv</artifactId>
	<packaging>eclipse-plugin</packaging>

	<dependencies>
		<dependency>
			<groupId>org.eclipse.neoscada</groupId>
			<artifactId>org.eclipse.neoscada.utils.feature</artifactId>
			<version>${project.version}</version>
			<type>eclipse-feature</type>
		</dependency>
		<dependency>
			<groupId>org.eclipse.neoscada</groupId>
			<artifactId>org.eclipse.neoscada.ui.utils.feature</artifactId>
			<version>${project.version}</version>
			<type>eclipse-feature</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho.extras</groupId>
				<artifactId>tycho-document-bundle-plugin</artifactId>
				<executions>
					<execution>
						<id>javadoc</id>
						<goals>
							<goal>javadoc</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<outputDirectory>${basedir}/reference/api</outputDirectory>
							<tocFile>${basedir}/toc/tocjavadoc.xml</tocFile>
							<javadocOptions>
								<additionalArguments>
									<additionalArgument><![CDATA[-linkoffline http://docs.oracle.com/javase/8/docs/api/ ${basedir}/input/javase-7]]></additionalArgument>
									<additionalArgument><![CDATA[-linkoffline http://www.osgi.org/javadoc/r4v43/ ${basedir}/input/osgi-r4v43]]></additionalArgument>
								</additionalArguments>
							</javadocOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>