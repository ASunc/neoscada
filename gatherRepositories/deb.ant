<?xml version="1.0" encoding="UTF-8"?>
<!-- ====================================================================== 
      Build deb repository
     ====================================================================== -->
<project name="deb" default="default">
    <description>
            Build deb repository
    </description>
    
    <tstamp>
        <format property="buildTimestamp" pattern="yyyyMMddHHmm"/>
    </tstamp>
    
    <property file="default.properties"/>
    
    <!-- the target -->
    <property name="download.base.dir" location="${download.root}/downloads/org.eclipse.scada/drops/${buildType}${version}/${buildTimestamp}/repos"/>
    <property name="download.deb.dir" location="${download.base.dir}/deb"/>
    <property name="download.apt.dir" location="${download.base.dir}/apt"/>
    
    <!-- ================================= 
          target: default
         ================================= -->
    <target name="default" depends="echo,clean,copy,build">
    </target>
    
    <!-- ================================= 
          target: clean
         ================================= -->
    <target name="clean" unless="skip.clean">
        <delete dir="${download.deb.dir}"/>
        <delete dir="${download.apt.dir}"/>
    </target>
    
    <!-- ================================= 
          target: copy
         ================================= -->
    <target name="copy">
        <copy todir="${download.deb.dir}" preservelastmodified="true">
        	<fileset dir="${download.root}/downloads">
        	    <include name="*/drops/${version}/${buildType}*/packages/*.deb"/>
        	    <include name="*/drops/${version}/${buildType}*/packages/*.changes"/>
        	</fileset>
            <mapper type="flatten"/>
        </copy>
    </target>

    <!-- ================================= 
          target: build
         ================================= -->
    <target name="build">
        <!-- TODO: build the apt repository -->
    </target>


    <target name="echo">
        <echo message="download.deb.dir = ${download.deb.dir}"/>
        <echo message="download.apt.dir = ${download.apt.dir}"/>
    </target>
    
</project>
