<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.scada.deploy.repack</groupId>
		<artifactId>org.eclipse.scada.deploy.repack-parent</artifactId>
		<version>0.1.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>

	<groupId>org.eclipse.scada.deploy.repack-incubation</groupId>
	<artifactId>equinox-SDK</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<description>
		The Eclipse P2 director application packaged for the Eclipse SCADA system.
	</description>

	<build>
		<plugins>
			<plugin>
				<artifactId>jdeb</artifactId>
				<groupId>org.vafer</groupId>
				<version>1.0.1</version>

				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jdeb</goal>
						</goals>
						<configuration>
							<dataSet>
								<data>
									<src>${download.base}/equinox/drops/R-Kepler-201306052000/equinox-SDK-Kepler.zip</src>
									<type>file</type>
									<mapper>
										<type>perm</type>
										<prefix>/usr/share/eclipsescada/p2</prefix>
									</mapper>
								</data>
							</dataSet>
						</configuration>
					</execution>

				</executions>
			</plugin>

		</plugins>
	</build>



	<profiles>

		<profile>

			<!--rpm must be a profile since it requires 'rpmbuild' on the target machine -->

			<id>rpm</id>

			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>rpm-maven-plugin</artifactId>
						<version>2.1-alpha-3</version>

						<configuration>
							<copyright>EPL</copyright>
							<distribution>Eclipse SCADA 0.1.0 (Incubation)</distribution>
							<group>Application/Misc</group>
							<changelogFile>rpm/changelog</changelogFile>

							<defineStatements>
								<!-- <defineStatement>_unpackaged_files_terminate_build 0</defineStatement> -->
							</defineStatements>
						</configuration>

						<executions>
							<execution>
								<id>generate-rpm-amd64</id>
								<goals>
									<goal>rpm</goal>
								</goals>
								<configuration>
									<needarch>x86_64</needarch>
									<workarea>target/rpm/x86_64</workarea>
									<mappings>
										<mapping>
											<directory>/usr/share/${project.artifactId}/product</directory>
											<username>root</username>
											<groupname>root</groupname>
											<sources>
												<source>
													<location>target/products/org.eclipse.scada.deploy.p2director/linux/gtk/x86_64</location>
												</source>
											</sources>
										</mapping>
										<mapping>
											<directory>/usr/bin</directory>
											<filemode>0755</filemode>
											<username>root</username>
											<groupname>root</groupname>
											<sources>
												<softlinkSource>
													<location>/usr/share/${project.artifactId}/product/p2director</location>
												</softlinkSource>
											</sources>
										</mapping>
									</mappings>
								</configuration>
							</execution>
							<execution>
								<id>generate-rpm-i386</id>
								<goals>
									<goal>rpm</goal>
								</goals>
								<configuration>
									<needarch>i386</needarch>
									<workarea>target/rpm/x86</workarea>
									<mappings>
										<mapping>
											<directory>/usr/share/${project.artifactId}/product</directory>
											<username>root</username>
											<groupname>root</groupname>
											<sources>
												<source>
													<location>target/products/org.eclipse.scada.deploy.p2director/linux/gtk/x86</location>
												</source>
											</sources>
										</mapping>
										<mapping>
											<directory>/usr/bin</directory>
											<filemode>0755</filemode>
											<username>root</username>
											<groupname>root</groupname>
											<sources>
												<softlinkSource>
													<location>/usr/share/${project.artifactId}/product/p2director</location>
												</softlinkSource>
											</sources>
										</mapping>
									</mappings>
								</configuration>
							</execution>
						</executions>
					</plugin>

				</plugins>
			</build>
		</profile> <!-- rpm -->

	</profiles>

</project>